{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"],
      "components/*": ["./src/components/*"],
      "helpers/*": ["./src/helpers/*"],
      "pages/*": ["./src/pages/*"],
      "types/*": ["./src/types/*"]
    },
    "jsx": "react-native"
  },
  "include": ["src/**/*", "./App.tsx"],
  "exclude": ["node_modules", "**/*.spec.js", "**/*.spec.ts"]
}
